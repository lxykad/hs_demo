<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/hlsdlg_action_sheet_corners_bg"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/level2_infotip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textColor="@color/black"
        android:layout_marginTop="18dp"
        android:text=""
        android:gravity="center_horizontal"
        android:textSize="@dimen/font_size_18"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#cccccc"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buyButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_height="wrap_content"
            android:text="立即续费"
            android:gravity="center"
            android:textSize="@dimen/font_size_16"
            android:textColor="#3BA6ED"/>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#cccccc"/>

        <TextView
            android:id="@+id/continueButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="继续使用"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:textSize="@dimen/font_size_16"
            android:textColor="#3BA6ED"/>

    </LinearLayout>

</LinearLayout><!-- From: file:/Users/lxy/Desktop/hs/app/build/intermediates/exploded-aar/quotewidget/res/layout/hlsdlg_qii_level2_infotip.xml -->