<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="65dip"
    android:minWidth="110dip"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/stock_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/hlqb_stock_name_color"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="@dimen/font_size_16"
        android:text="上证指数" />

    <TextView
        android:id="@+id/stock_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="@dimen/font_size_16"
        android:text="2630.49" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.hundsun.quotewidget.widget.QiiAutoTextSizeView
            android:id="@+id/quote_updown"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="4dip"
            android:textSize="@dimen/font_size_12"
            android:text="26.49" />

        <TextView
            android:id="@+id/quote_updown_percent"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="4dip"
            android:textSize="@dimen/font_size_12"
            android:text="+10.00%" />
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/lxy/Desktop/hs/app/build/intermediates/exploded-aar/quotewidget/res/layout/hlqb_widget_qii_quote_item.xml -->