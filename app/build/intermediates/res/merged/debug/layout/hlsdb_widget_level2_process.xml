    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/hlsdb_Level2processInfo01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="8dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hlsdb_Level2processInfoTv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/hlsdb_Level2_process_info" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hlsdb_Level2processInfo02"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="8dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hlsdb_Level2processInfoTv02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/hlsdb_Level2_process_info" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/hlsdb_Level2processBtnLL"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/hlsdb_Level2processBtn"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/red"
            android:background="@drawable/hlsdb_level2_btn_style"
            android:text="@string/hlsdb_Level2_process_btn" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hlsdb_Level2processInfo03"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="12dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hlsdb_Level2processInfoTv03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/hlsdb_Level2_process_info" />
