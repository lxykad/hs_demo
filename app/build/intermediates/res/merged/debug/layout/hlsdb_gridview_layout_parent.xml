<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/stockInfomationlinearLayout">

    <GridView
        android:id="@+id/hlsdb_myGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignLeft="@id/hlsdb_myGridView"
        android:layout_alignRight="@id/hlsdb_myGridView"
        android:orientation="horizontal"
        android:weightSum="3">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1">
            <com.hundsun.quotewidget.widget.QiiAutoTextSizeView
                android:id="@+id/hlsdb_quote_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:gravity="center_horizontal"
                android:textSize="@dimen/font_size_24"
                android:text="9.0"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="9dp"/>
            <com.hundsun.quotewidget.widget.QiiAutoTextSizeView
                android:id="@+id/hlsdb_quote_updown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="43dp"
                android:layout_marginLeft="9dp"
                android:textSize="@dimen/font_size_14"
                android:text="-1.00"
                android:layout_marginTop="43dp"/>
            <com.hundsun.quotewidget.widget.QiiAutoTextSizeView
                android:id="@+id/hlsdb_quote_updown_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="43dp"
                android:layout_toRightOf="@id/hlsdb_quote_updown"
                android:layout_alignTop="@id/hlsdb_quote_updown"
                android:layout_marginLeft="13dp"
                android:textSize="@dimen/font_size_14"
                android:text="-1.21%"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/hlsdb_B1"
                android:singleLine="true"
                style="@style/hlsdb_QW_quote_nomal_label"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/font_size_13"
                android:minHeight="26dp"
                android:text="b1"/>

            <com.hundsun.quotewidget.widget.QiiAutoTextSizeView
                android:id="@+id/hlsdb_B2"
                android:singleLine="true"
                android:textColor="@color/hlsdb_QW_quote_nomal_text_color"
                android:layout_width="wrap_content"
                android:minWidth="55dp"
                android:textSize="@dimen/font_size_18"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/hlsdb_B1"
                android:layout_alignTop="@id/hlsdb_B1"
                android:minHeight="26dp"
                android:gravity="left|center_vertical"
                android:text="b2"/>

            <TextView
                android:id="@+id/hlsdb_B3"
                android:singleLine="true"
                style="@style/hlsdb_QW_quote_nomal_label"
                android:layout_alignLeft="@id/hlsdb_B1"
                android:layout_below="@id/hlsdb_B1"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/font_size_13"
                android:minHeight="26dp"
                android:text="b3"/>

            <com.hundsun.quotewidget.widget.QiiAutoTextSizeView
                android:id="@+id/hlsdb_B4"
                android:singleLine="true"
                android:textColor="@color/hlsdb_QW_quote_nomal_text_color"
                android:layout_width="wrap_content"
                android:minWidth="55dp"
                android:textSize="@dimen/font_size_18"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/hlsdb_B3"
                android:layout_alignTop="@id/hlsdb_B3"
                android:minHeight="26dp"
                android:gravity="left|center_vertical"
                android:text="b4" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/hlsdb_C1"
                android:singleLine="true"
                style="@style/hlsdb_QW_quote_nomal_label"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/font_size_13"
                android:minHeight="26dp"
                android:text="b1" />

            <com.hundsun.quotewidget.widget.QiiAutoTextSizeView
                android:id="@+id/hlsdb_C2"
                android:singleLine="true"
                android:textColor="@color/hlsdb_QW_quote_nomal_text_color"
                android:layout_width="wrap_content"
                android:minWidth="55dp"
                android:textSize="@dimen/font_size_18"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/hlsdb_C1"
                android:layout_alignTop="@id/hlsdb_C1"
                android:minHeight="26dp"
                android:gravity="left|center_vertical"
                android:text="b2" />

            <TextView
                android:id="@+id/hlsdb_C3"
                android:singleLine="true"
                style="@style/hlsdb_QW_quote_nomal_label"
                android:layout_alignLeft="@id/hlsdb_C1"
                android:layout_below="@id/hlsdb_C1"
                android:textSize="@dimen/font_size_13"
                android:minHeight="26dp"
                android:gravity="left|center_vertical"
                android:text="b3"/>

            <com.hundsun.quotewidget.widget.QiiAutoTextSizeView
                android:id="@+id/hlsdb_C4"
                android:singleLine="true"
                android:textColor="@color/hlsdb_QW_quote_nomal_text_color"
                android:layout_width="wrap_content"
                android:minWidth="55dp"
                android:textSize="@dimen/font_size_18"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/hlsdb_C3"
                android:layout_alignTop="@id/hlsdb_C3"
                android:minHeight="26dp"
                android:gravity="left|center_vertical"
                android:text="b4"/>
        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/hlsdb_stock_related_block_icon_layout"
        android:layout_width="25dp"
        android:layout_height="80dp"
        android:paddingLeft="4dp"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/hlsdb_stock_related_block_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:background="@drawable/hlsdb_stock_related_block_icon" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/lxy/Desktop/hs/app/build/intermediates/exploded-aar/quotewidget/res/layout/hlsdb_gridview_layout_parent.xml -->