<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/hlqb_table_item_height"
    android:orientation="horizontal"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:paddingRight="3dp" >

    <LinearLayout
        android:id="@+id/MyStockMarketLL"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/MyStockMarketTv"
            android:layout_width="14dp"
            android:layout_height="12dp"
            android:background="@drawable/hlqb_gmu_market_icon_us"
            android:focusable="false"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:layout_marginTop="6dp"
            android:textSize="@dimen/font_size_8">
        </TextView>

        <TextView
            android:id="@+id/MyStockMarketNull"
            android:layout_width="14dip"
            android:layout_height="12dip"
            android:layout_gravity="center"
            android:focusable="false"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_10">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/name_code_container"
        android:layout_width="100dip"
        android:layout_height="fill_parent"
        android:gravity="left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/stock_name"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/hlqb_stock_name_color"
            android:textSize="@dimen/font_size_16" />
        <LinearLayout
            android:id="@+id/MyStockCodeBusiContainerLL"
            android:layout_width="100dip"
            android:layout_height="fill_parent"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stock_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hlqb_stock_code_color"
                android:textSize="@dimen/font_size_12"/>
            <TextView
                android:id="@+id/MyStockBusiIcon1"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_gravity="center_vertical|left"
                android:layout_marginRight="2dip"
                android:background="@drawable/hlqb_gmu_business_icon"
                android:focusable="false"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginLeft="0dip"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_10">
            </TextView>

            <TextView
                android:id="@+id/MyStockBusiIcon2"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_gravity="center_vertical|left"
                android:background="@drawable/hlqb_gmu_business_icon"
                android:focusable="false"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_10">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/stock_price"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.12"
        android:gravity="right|center_vertical"
        android:textColor="@color/hlqb_stock_price_color"
        android:textSize="@dimen/font_size_16" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/quote_updown_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="4dip"
            android:textColor="#000333"
            android:singleLine="true"
            android:textSize="@dimen/font_size_16" />
    </RelativeLayout>

</LinearLayout>