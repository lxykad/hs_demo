<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hlsdb_LoadingRequestLL"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/hlsdb_RefreshLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="3dp"
        android:visibility="visible" >

        <ProgressBar
            android:id="@+id/hlsdb_RefreshProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:indeterminateDrawable="@drawable/hlsdb_common_page_fresh_progress" />

        <TextView
            android:id="@+id/hlsdb_RefreshClewTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:text="@string/hlsdb_CommonLondingMoreRequestDataLable"
            android:textColor="@color/hlsdb_CommonLoadingMoreTxtColor" />
    </LinearLayout>

    <TextView
        android:id="@+id/hlsdb_RefreshRequestReturnClewTV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/hlsdb_CommonLoadingRequestNoDataLable"
        android:textColor="@color/hlsdb_CommonLoadingMoreTxtColor"
        android:visibility="visible" />

    <ScrollView
        android:id="@+id/hlsdb_RefreshScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/hlsdb_RefreshListView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#ffffff"
                android:divider="@drawable/hlsdb_common_list_divider"
                android:drawSelectorOnTop="false"
                android:listSelector="@drawable/hlsdb_common_list_selector_background"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/hlsdb_LoadingMoreReturnClewTV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/hlsdb_CommonLoadingNoMoreDataLable"
                android:textColor="@color/hlsdb_CommonLoadingMoreTxtColor"
                android:visibility="visible" />

            <TextView
                android:id="@+id/hlsdb_LoadingMoreOnClickTV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/hlsdb_CommonLoadingMoreLable"
                android:textColor="@color/hlsdb_CommonLoadingMoreTxtColor"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/hlsdb_LoadingMoreProgressBarLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="3dp"
                android:visibility="visible" >

                <ProgressBar
                    android:id="@+id/hlsdb_LoadingMoreProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:indeterminateDrawable="@drawable/hlsdb_common_page_fresh_progress" />

                <TextView
                    android:id="@+id/hlsdb_LoadingMoreClewTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:text="@string/hlsdb_CommonLondingMoreRequestDataLable"
                    android:textColor="@color/hlsdb_CommonLoadingMoreTxtColor" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>