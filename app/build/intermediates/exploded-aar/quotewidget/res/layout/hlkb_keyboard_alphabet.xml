<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hlkb_english"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/hlkb_keyboard_num_btn_ypadding"
        android:layout_weight="1" >

        <Button
            android:id="@+id/hlkb_eng_q"
            style="@style/hlkb_QwKeyboardButtonStyle"
            android:text="Q" />

        <Button
            android:id="@+id/hlkb_eng_w"
            style="@style/hlkb_QwKeyboardButtonStyle"
            android:text="W" />

        <Button
            android:id="@+id/hlkb_eng_e"
            style="@style/hlkb_QwKeyboardButtonStyle"
            android:text="E" />

        <Button
            android:id="@+id/hlkb_eng_r"
            style="@style/hlkb_QwKeyboardButtonStyle"
            android:text="R" />

        <Button
            android:id="@+id/hlkb_eng_t"
            style="@style/hlkb_QwKeyboardButtonStyle"
            android:text="T" />

        <Button
            android:id="@+id/hlkb_eng_y"
            style="@style/hlkb_QwKeyboardButtonStyle"
            android:text="Y" />

        <Button
            android:id="@+id/hlkb_eng_u"
            style="@style/hlkb_QwKeyboardButtonStyle"
            android:text="U" />

        <Button
            android:id="@+id/hlkb_eng_i"
            style="@style/hlkb_QwKeyboardButtonStyle"
            android:text="I" />

        <Button
            android:id="@+id/hlkb_eng_o"
            style="@style/hlkb_QwKeyboardButtonStyle"
            android:text="O" />

        <Button
            android:id="@+id/hlkb_eng_p"
            style="@style/hlkb_QwKeyboardButtonStyle"
            android:text="P" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/hlkb_keyboard_num_btn_ypadding"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/hlkb_a_line_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip" >

            <Button
                android:id="@+id/hlkb_eng_a"
                style="@style/hlkb_QwKeyboardButtonStyle"
                android:text="A" />

            <Button
                android:id="@+id/hlkb_eng_s"
                style="@style/hlkb_QwKeyboardButtonStyle"
                android:text="S" />

            <Button
                android:id="@+id/hlkb_eng_d"
                style="@style/hlkb_QwKeyboardButtonStyle"
                android:text="D" />

            <Button
                android:id="@+id/hlkb_eng_f"
                style="@style/hlkb_QwKeyboardButtonStyle"
                android:text="F" />

            <Button
                android:id="@+id/hlkb_eng_g"
                style="@style/hlkb_QwKeyboardButtonStyle"
                android:text="G" />

            <Button
                android:id="@+id/hlkb_eng_h"
                style="@style/hlkb_QwKeyboardButtonStyle"
                android:text="H" />

            <Button
                android:id="@+id/hlkb_eng_j"
                style="@style/hlkb_QwKeyboardButtonStyle"
                android:text="J" />

            <Button
                android:id="@+id/hlkb_eng_k"
                style="@style/hlkb_QwKeyboardButtonStyle"
                android:text="K" />

            <Button
                android:id="@+id/hlkb_eng_l"
                style="@style/hlkb_QwKeyboardButtonStyle"
                android:text="L" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/hlkb_keyboard_num_btn_ypadding"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/hlkb_keyboard_eng_hide_button"
            android:layout_width="44dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/hlkb_keyboard_padding_screen"
            android:layout_marginRight="@dimen/hlkb_keyboard_eng_btn_xpadding"
            android:background="@drawable/hlkb_keyboard_but_b"
            android:gravity="center"
            android:text="@string/hlkb_keyboard_num_hide"
            android:textSize="@dimen/font_size_14"  />

        <LinearLayout
            android:id="@+id/hlkb_z_line_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/hlkb_eng_z"
                style="@style/hlkb_QwKeyboardButtonStyle"
                android:text="Z" />

            <Button
                android:id="@+id/hlkb_eng_x"
                style="@style/hlkb_QwKeyboardButtonStyle"
                android:text="X" />

            <Button
                android:id="@+id/hlkb_eng_c"
                style="@style/hlkb_QwKeyboardButtonStyle"
                android:text="C" />

            <Button
                android:id="@+id/hlkb_eng_v"
                style="@style/hlkb_QwKeyboardButtonStyle"
                android:text="V" />

            <Button
                android:id="@+id/hlkb_eng_b"
                style="@style/hlkb_QwKeyboardButtonStyle"
                android:text="B" />

            <Button
                android:id="@+id/hlkb_eng_n"
                style="@style/hlkb_QwKeyboardButtonStyle"
                android:text="N" />

            <Button
                android:id="@+id/hlkb_eng_m"
                style="@style/hlkb_QwKeyboardButtonStyle"
                android:text="M" />
        </LinearLayout>

        <Button
            android:id="@+id/hlkb_keyboard_eng_delete_button"
            android:layout_width="44dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/hlkb_keyboard_eng_btn_xpadding"
            android:layout_marginRight="@dimen/hlkb_keyboard_padding_screen"
            android:background="@drawable/hlkb_keyboard_but_delete"
            android:gravity="center"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/hlkb_keyboard_num_btn_ypadding"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/hlkb_keyboard_eng_123_button"
            android:layout_width="80dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/hlkb_keyboard_eng_btn_xpadding"
            android:background="@drawable/hlkb_keyboard_but_b"
            android:gravity="center"
            android:text="@string/hlkb_keyboard_eng_123"
            android:textSize="@dimen/font_size_14" />

        <Button
            android:id="@+id/hlkb_keyboard_eng_clear_button"
            style="@style/hlkb_QwKeyboardButtonStyle"
            android:layout_marginLeft="@dimen/hlkb_keyboard_padding_screen"
            android:layout_marginRight="@dimen/hlkb_keyboard_padding_screen"
            android:background="@drawable/hlkb_keyboard_but_b"
            android:text="@string/hlkb_keyboard_num_clear" />
        
        <Button
            android:id="@+id/hlkb_keyboard_eng_enter_button"
            android:layout_width="80dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/hlkb_keyboard_padding_screen"
            android:background="@drawable/hlkb_keyboard_but_b"
            android:gravity="center"
            android:text="@string/hlkb_keybord_eng_enter"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

</LinearLayout>